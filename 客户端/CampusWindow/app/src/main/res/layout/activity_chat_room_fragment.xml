<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">
    <RelativeLayout
        android:id="@+id/chat_room_fg_r1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/chat_room_img"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/ikun" />
        <TextView
            android:id="@+id/chat_room_name"
            android:layout_toRightOf="@+id/chat_room_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北冥渔"/>
        <TextView
            android:id="@+id/chat_room_state"
            android:layout_toRightOf="@+id/chat_room_img"
            android:layout_alignBottom="@+id/chat_room_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态:"/>

        <ImageView
            android:id="@+id/chat_room_btn_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="-3dp"
            android:src="@drawable/menu1" />

    </RelativeLayout>

    <EditText
        android:layout_below="@+id/chat_room_fg_r1"
        android:id="@+id/chat_room_fg_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableLeft="@drawable/search3"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/chat_room_fg_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>