<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/gray">
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_all_corners"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rl_user"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image_user"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:foregroundGravity="left" />
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="307dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/post_title"
            android:layout_marginLeft="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_user"
            android:text="6666666"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"/>
        <RelativeLayout
            android:layout_below="@+id/post_title"
            android:id="@+id/rl_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_image"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/iv_overmuch"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:id="@+id/tv_overmuch"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:textSize="70dp"/>
            </FrameLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <RelativeLayout
            android:id="@+id/ll_dibu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_image">

            <LinearLayout
                android:id="@+id/index_academic_lin1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/index_academic_lin2"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <CheckBox
                    android:id="@+id/bt_thumbsup_post"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="@drawable/selector_like"
                    android:button="@null" />
                <TextView
                    android:layout_alignLeft="@+id/bt_thumbsup_post"
                    android:layout_below="@+id/bt_thumbsup_post"
                    android:id="@+id/thumbsup_num_post"
                    android:gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/index_academic_lin2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/index_academic_lin3"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/bt_comments_post"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="@drawable/comment3"
                    />
                <TextView
                    android:layout_alignLeft="@+id/bt_comments_post"
                    android:id="@+id/comments_num_post"
                    android:gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/index_academic_lin3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp">
                <CheckBox
                    android:id="@+id/bt_collect_post"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:button="@null"
                    android:background="@drawable/selector_collect" />
                <TextView
                    android:layout_alignLeft="@+id/bt_collect_post"
                    android:layout_below="@+id/bt_collect_post"
                    android:id="@+id/collect_num_post"
                    android:gravity="center"
                    android:layout_width="45dp"
                    android:layout_height="15dp"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>