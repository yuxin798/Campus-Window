<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserDataActivity"
    android:background="@color/gray"
    android:padding="10dp">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:ignoreGravity="@id/edit_user_data_back_btn">
        <Button
            android:id="@+id/edit_user_data_back_btn"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/angle_brackets_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改信息"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/r2"
        android:layout_below="@+id/r1"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_10dp_all_corners"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageView
            android:id="@+id/edit_user_img"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ikun"/>
<!--        <com.shehuan.niv.NiceImageView-->
<!--            android:id="@+id/edit_user_img"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@mipmap/ikun"-->
<!--            app:is_circle="true"/>-->
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="昵称"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/edit_user_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="20dp"
                android:drawableRight="@drawable/rightarrow3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="性别"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/edit_user_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="20dp"
                android:drawableRight="@drawable/rightarrow3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="简介"
                android:textSize="17dp"/>
            <EditText
                android:id="@+id/edit_user_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@null"
                android:maxLength="100"
                android:hint="这个人很懒，什么也没有留下~"/>
        </LinearLayout>

        <TextView
            android:id="@+id/edit_user_label_num"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="6/666"/>
    </LinearLayout>

    <Button
        android:layout_below="@+id/r2"
        android:id="@+id/edit_user_data_save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="保存"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

</RelativeLayout>