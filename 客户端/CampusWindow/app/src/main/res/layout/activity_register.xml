        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入用户名"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/edt_re_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入邮箱"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/edt_re_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/edt_re_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="再次确认密码"
        android:textSize="20dp"/>
    <EditText
        android:id="@+id/edt_re_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入本人所在学校"
        android:textSize="20dp"/>
